<?xml version="1.0" encoding="utf-8"?>
<odoo>


<record id="action_female_employee" model="ir.actions.act_window">
    <field name="name">Female Employees</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">supporthub.employees</field>
    <field name="domain">[('gender','=','female')]</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{'default_gender':'female'}</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create an employee
        </p>
    </field>
</record>




<menuitem id="SH360_female_employee"
    name="Female Employee"
    action="action_female_employee"
    parent="SH360_employee"/>     
              
     
</odoo>
