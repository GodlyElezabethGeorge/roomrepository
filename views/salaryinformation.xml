<?xml version="1.0" encoding="utf-8"?>
<odoo>


<record id="salary_information_view" model="ir.ui.view">
    <field name="name">SalaryInformation</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="hr.view_employee_form"/>
    <field name="arch" type="xml">

<notebook>
    <page id="salaryinformation"  string="Salary Information">
            <xpath expr="//page[@name='hr_settings']" position="after">
            <group>
                <field name="salary"/>
            </group>    
            </xpath> 
    </page>
</notebook>  


 </field>  
</record>
</odoo>


